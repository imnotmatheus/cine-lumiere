@model IEnumerable<Reserva>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadButacas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcion.Descripcion) |
                    @Html.DisplayFor(modelItem => item.Funcion.Fecha) |
                    @Html.DisplayFor(modelItem => item.Funcion.Hora) |
                    Sala @Html.DisplayFor(modelItem => item.Funcion.SalaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaAlta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                    @Html.DisplayFor(modelItem => item.Cliente.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadButacas)
                </td>
                <td>
                    <a asp-controller="Reservas" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Reservas" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Reservas" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>